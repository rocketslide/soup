<h1>Restaurants</h1>

<table>


<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= link_to restaurant.name, restaurant %></td>
    <td><%= restaurant.location %></td>
    <td><%= "Closed" if restaurant.open == false %></td>    
  </tr>
<% end %>

</table>

<br />

<%= link_to 'New Restaurant', new_restaurant_path %>
